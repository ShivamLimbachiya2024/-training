                        <td>
                            <textarea name="add1" id="add1" cols="30" rows="1"></textarea>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label for="email">Email:</label>

                        </td>
                        <td>
                            <input type="text" maxlength="120" name="email" id="email">
                        </td>
